{
    "manifest_version" : 2,
    "name" : "taciturn-chrome",
    "description" : "Does passive security scanning of websites",
    "version" : "0.1",

    "permissions" : [
        "cookies",
        "notifications",
        "storage",
        "http://*/*", 
        "https://*/*"
    ],

    "background" : {
        "page": "background.html"
    },
	
    "content_scripts" : [{
        "matches" : ["*://*/*"],
        "js" : ["js/jquery-1.11.1.js",
            "js/extension.js"]
    }],
	
    "browser_action" : {
        "default_icon" : "img/icon.png",
        "default_popup" : "popup.html"
    },

    "options_page": "options.html"
}
