{
    "manifest_version" : 2,
    "name" : "observer",
    "description" : "Does passive security scanning of websites",
    "version" : "1.0",

    "permissions" : [
		"cookies",
        "http://*/*", 
		"https://*/*"
    ],

    "background" : {
        "scripts" : ["js/background.js"]
    },

    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    }
}
